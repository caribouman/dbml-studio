{
  "name": "dbml-studio",
  "version": "1.0.0",
  "description": "Interactive DBML viewer with draggable tables",
  "main": "electron.js",
  "author": {
    "name": "DBML Studio Team",
    "email": "info@dbmlstudio.com"
  },
  "homepage": "https://github.com/yourusername/dbml-studio",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"DEV_MODE=true node server.js\" \"vite --port 5173 --strictPort\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "electron": "electron .",
    "electron:dev": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.8",
    "@dbml/core": "^3.5.1",
    "@uiw/react-codemirror": "^4.25.3",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dagre": "^0.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "html-to-image": "^1.11.11",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.10.4",
    "sql.js": "^1.13.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/dagre": "^0.7.52",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.dbmlstudio.app",
    "productName": "DBML Studio",
    "directories": {
      "output": "release"
    },
    "asar": false,
    "files": [
      "electron.js",
      "preload.js",
      "server.js",
      "database.js",
      "auth.js",
      "databricksClient.js",
      "dbmlToDatabricksSQL.js",
      "dist/**/*",
      "public/**/*",
      "data",
      "package.json"
    ],
    "icon": "public/icon.png",
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
